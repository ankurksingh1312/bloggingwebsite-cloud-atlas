<%-include("partials/header");-%>
<div class="container">
	<div class="row">
	    
	    <div class="col-md-8 col-md-offset-2">
	        
    		<h1>Compose</h1>
    		
    		<form action="/compose" method="POST">
    		    
    		    <div class="form-group">
    		        <label for="title">Title <span class="require">*</span></label>
    		        <input type="text" class="form-control" name="composeTitle" />
    		    </div>
    		    
    		    <div class="form-group">
    		        <label for="description">Post</label>
    		        <textarea rows="5" class="form-control" name="composeContent" ></textarea>
    		    </div> 
    		    <div class="form-group">
    		        <button name="publishButton" type="submit" class="btn btn-primary">
    		            Publish
    		        </button>
    		    </div>
    		    
    		</form>
		</div>
		
	</div>
</div>

<%-include("partials/footer");-%>